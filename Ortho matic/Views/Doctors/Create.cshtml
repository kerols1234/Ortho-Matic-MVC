@model Doctor

@{
    ViewData["Title"] = "Create";
}

<div class="row" style="width:100%">
    <div class="col-12 pd-2">
        <div class="card custom-card">
            <div class="row">
                <form class="col-12 pb-2" asp-action="Create" method="post">
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group col-4">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="DoctorSpecialty" class="control-label"></label>
                            <select asp-for="DoctorSpecialty" asp-items="@Html.GetEnumSelectList<Specialty>()" class="form-control"></select>
                            <span asp-validation-for="DoctorSpecialty" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="DoctorDegree" class="control-label"></label>
                            <select asp-for="DoctorDegree" asp-items="@Html.GetEnumSelectList<Degree>()" class="form-control"></select>
                            <span asp-validation-for="DoctorDegree" class="text-danger"></span>
                        </div>
                        <div class="col-12 card-footer bg-white">
                            <button type="submit" class="btn btn-outline-info">Create</button>
                            <a asp-action="Index" class="btn btn-outline-warning">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }













