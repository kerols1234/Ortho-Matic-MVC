@model Hospital

@{
    ViewData["Title"] = "Details";
}

<div class="row" style="width:100%">
    <div class="col-12 pb-2">
        <div class="card custom-card">
            <div class="card-header bg-white">
                <div class="row">
                    <div class="form-group col-5">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                    <div class="form-group col-5">
                        <label asp-for="Address"></label>
                        <input asp-for="Address" disabled class="form-control" />
                    </div>
                    <div class="form-group col-2">
                        <div class="mapouter">
                            <div class="gmap_canvas">
                                <iframe width="80" height="80" id="gmap_canvas" src="https://maps.google.com/maps?q=egypt%20giza%20semsema&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://2piratebay.org">pirate bay</a><br><style>
                                                                                                                                                                                                                                                                                                                .mapouter {
                                                                                                                                                                                                                                                                                                                    position: relative;
                                                                                                                                                                                                                                                                                                                    text-align: right;
                                                                                                                                                                                                                                                                                                                    height: 80px;
                                                                                                                                                                                                                                                                                                                    width: 80px;
                                                                                                                                                                                                                                                                                                                }</style><a href="https://www.embedgooglemap.net">embedding google maps on website</a><style>
                                                                                                                                                                                                                                                                                                                                                                                                          .gmap_canvas {
                                                                                                                                                                                                                                                                                                                                                                                                              overflow: hidden;
                                                                                                                                                                                                                                                                                                                                                                                                              background: none !important;
                                                                                                                                                                                                                                                                                                                                                                                                              height: 80px;
                                                                                                                                                                                                                                                                                                                                                                                                              width: 80px;
                                                                                                                                                                                                                                                                                                                                                                                                          }</style>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table" id="DT_load">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Adress</th>
                            <th scope="col">Lat</th>
                            <th scope="col">Lon</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/hospital.js" asp-append-version="true"></script>
}