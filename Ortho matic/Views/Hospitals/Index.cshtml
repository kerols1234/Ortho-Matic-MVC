@model Hospital

@{
    ViewData["Title"] = "Index";
    SelectList regionLst = new SelectList(ViewBag.Regions, "Id", "Name");
}

<div class="row" style="width:100%">
    <form class="col-12 pb-2" asp-action="insert" method="post">
        <div class="card custom-card">
            <div class="card-body">
                <div class="row">
                    @if (Model.Id != 0)
                    {
                        <input asp-for="Id" hidden class="form-control" type="text">
                    }
                    <div class="form-group col-4">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="Region"></label>
                        <select asp-for="RegionId" asp-items="regionLst" class="form-control"></select>
                        <span asp-validation-for="Region" class="text-danger"></span>
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="Address"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="Phone1"></label>
                        <input asp-for="Phone1" class="form-control" />
                        <span asp-validation-for="Phone1" class="text-danger"></span>
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="Phone2"></label>
                        <input asp-for="Phone2" class="form-control" />
                        <span asp-validation-for="Phone2" class="text-danger"></span>
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="Phone3"></label>
                        <input asp-for="Phone3" class="form-control" />
                        <span asp-validation-for="Phone3" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-white">
                <button type="submit" class="btn btn-outline-info">Create</button>
            </div>
        </div>
    </form>

    <div class="col-12 pb-2">
        <div class="card custom-card">
            <div class="card-body">
                <table class="table" id="DT_load">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Region</th>
                            <th scope="col">PhoneNumber</th>
                            <th scope="col">Address</th>
                            <th scope="col">Number of doctors</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/hospital.js" asp-append-version="true"></script>
}