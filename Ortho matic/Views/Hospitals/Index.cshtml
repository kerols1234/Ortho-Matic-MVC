@model Hospital

@{
    ViewData["Title"] = "Index";
}

<div class="row" style="width:100%">
    <form class="col-12 pb-2" asp-action="Upsert" method="post">
        <div class="card custom-card">
            <div class="card-body">
                <div class="row">
                    @if (Model.Id != 0)
                    {
                        <input asp-for="Id" hidden class="form-control" type="text">
                    }
                    <div class="form-group col-4">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="Address"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                    </div>
                </div>
            </div>
            <div class="card-footer bg-white">
                @if (Model.Id == 0)
                {
                    <button type="submit" class="btn btn-outline-info">Create</button>
                }
                else
                {
                    <button type="submit" class="btn btn-outline-info">Update</button>
                    <a asp-action="Index" class="btn btn-outline-warning">Cancel</a>
                }
            </div>
        </div>
    </form>

    <div class="col-12 pb-2">
        <div class="card custom-card">
            <div class="card-body">
                <table class="table" id="DT_load">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Adress</th>
                            <th scope="col">Lat</th>
                            <th scope="col">Lon</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/hospital.js" asp-append-version="true"></script>
}