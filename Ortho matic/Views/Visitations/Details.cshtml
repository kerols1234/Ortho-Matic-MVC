@model Ortho_matic.Models.ViewModels.TaskVM

@{
    ViewData["Title"] = "Details";
}

<div class="row" style="width:100%">
    <div class="col-12 pb-2">
        <div class="card custom-card">
            <div class="row">
                <div class="form-group col-4">
                    <label asp-for="UserName"></label>
                    <input disabled asp-for="UserName" class="form-control" />
                </div>
                <div class="form-group col-4">
                    <label asp-for="TimeOfVisit"></label>
                    <input disabled asp-for="TimeOfVisit" class="form-control" />
                </div>
                <div class="form-group col-4">
                    <label asp-for="Type"></label>
                    <input disabled asp-for="Type" class="form-control" />
                </div>
                <div class="form-group col-12">
                    <label asp-for="comment"></label>
                    <textarea readonly rows="3" asp-for="comment" class="form-control" ></textarea>
                </div>
                <div class="form-group col-4">
                    <label asp-for="DoctorName"></label>
                    <input disabled asp-for="DoctorName" class="form-control" />
                </div>
                <div class="form-group col-4">
                    <label asp-for="DoctorSpecialty"></label>
                    <input disabled asp-for="DoctorSpecialty" class="form-control" />
                </div>
                <div class="form-group col-4">
                    <label asp-for="DoctorDegree"></label>
                    <input disabled asp-for="DoctorDegree" class="form-control" />
                </div>
                @if (Model.Type == "Clinic")
                {
                    <div class="form-group col-6">
                        <label asp-for="ClinicAddress"></label>
                        <input disabled asp-for="ClinicAddress" class="form-control" />
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="ClinicPhone1"></label>
                        <input disabled asp-for="ClinicPhone1" class="form-control" />
                    </div>
                }
                @if (Model.Type == "Hospital")
                {
                    <div class="form-group col-4">
                        <label asp-for="HospitalName"></label>
                        <input disabled asp-for="HospitalName" class="form-control" />
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="HospitalAddress"></label>
                        <input disabled asp-for="HospitalAddress" class="form-control" />
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="HospitalPhone1"></label>
                        <input disabled asp-for="HospitalPhone1" class="form-control" />
                    </div>
                }
                @if (Model.Latitude != null)
                {
                    <div class="form-group col-12  offset-2">
                        <div class="mapouter">
                            <div class="gmap_canvas">
                                <iframe width="600" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=@Model.Latitude,@Model.Longitude&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.whatismyip-address.com/divi-discount/">divi discount</a><br><style>
                                                                                                                                                                                                                                                                                                                                                     .mapouter {
                                                                                                                                                                                                                                                                                                                                                         position: relative;
                                                                                                                                                                                                                                                                                                                                                         text-align: right;
                                                                                                                                                                                                                                                                                                                                                         height: 500px;
                                                                                                                                                                                                                                                                                                                                                         width: 600px;
                                                                                                                                                                                                                                                                                                                                                     }</style><a href="https://www.embedgooglemap.net">embedgooglemap.net</a><style>
                                                                                                                                                                                                                                                                                                                                                                                                                                 .gmap_canvas {
                                                                                                                                                                                                                                                                                                                                                                                                                                     overflow: hidden;
                                                                                                                                                                                                                                                                                                                                                                                                                                     background: none !important;
                                                                                                                                                                                                                                                                                                                                                                                                                                     height: 500px;
                                                                                                                                                                                                                                                                                                                                                                                                                                     width: 600px;
                                                                                                                                                                                                                                                                                                                                                                                                                                 }</style>
                            </div>
                        </div>
                    </div>
                }
                <div class="form-group mt-3 col-9">
                    <button type="button" asp-action="Index" class="btn btn-warning text-white">
                        Cancel
                    </button>
                </div>
            </div>
        </div>

    </div>
</div>
