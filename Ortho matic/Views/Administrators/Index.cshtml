@model Administrator

@{
    ViewData["Title"] = "Administrators";
    SelectList regionLst = new SelectList(ViewBag.Regions, "Id", "Name");
}

<div class="row" style="width:100%">
    <form class="col-12 pb-2" asp-action="Upsert" method="post">
        <div class="card custom-card">
            <div class="card-body">
                <div class="row">
                    @if (Model.Id != 0)
                    {
                        <input asp-for="Id" hidden class="form-control" type="text">
                    }
                    <div class="form-group col-3">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="Specialty"></label>
                        <input asp-for="Specialty" class="form-control" />
                        <span asp-validation-for="Specialty" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="Region"></label>
                        <select asp-for="RegionId" asp-items="regionLst" class="form-control"></select>
                        <span asp-validation-for="Region" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="Comments"></label>
                        <textarea asp-for="Comments" rows="3" placeholder="Please add your comment here" class="form-control"></textarea>
                        <span asp-validation-for="Comments" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-white">
                @if (Model.Id == 0)
                {
                    <button type="submit" class="btn btn-outline-info">Create</button>
                }
                else
                {
                    <button type="submit" class="btn btn-outline-info">Update</button>
                    <a asp-action="Index" class="btn btn-outline-warning">Cancel</a>
                }
            </div>
        </div>
    </form>

    <div class="col-12 pb-2">
        <div class="card custom-card">
            <div class="card-body">
                <table class="table" id="DT_load">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Area</th>
                            <th scope="col">PhoneNumber</th>
                            <th scope="col">Specialty</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/administrator.js" asp-append-version="true"></script>
}