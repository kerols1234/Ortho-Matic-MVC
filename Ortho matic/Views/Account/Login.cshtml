@model Ortho_matic.Models.ViewModels.LoginVM
<div class="card custom-card m-auto">
    <div class="card-body">
        <form asp-controller="Account" asp-action="Login" method="post" role="form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="UserName" placeholder="User Name" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" placeholder="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success form-control btn-block">Log in</button>
            </div>
        </form>
    </div>
</div>